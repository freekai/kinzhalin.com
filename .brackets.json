{
    "language": {
        "html": {
            "spaceUnits": 2
        },
        "javascript": {
            "linting.prefer": ["JSHint", "JSLint"],
            "linting.usePreferredOnly": true
        }
    },
    "jslint.options": {
        "vars": true,
        "global": {
            "define": false,
            "require": false,
            "$": false
        }
    },
    "path": {
        "www/js/3rd/*.js": {
            "linting.enabled": false
        },
        "node_modules/**/*.js": {
            "linting.enabled": false
        }
    }
}